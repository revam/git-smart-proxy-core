      "args": [
        "--runInBand",
      ],
      "cwd": "${workspaceFolder}/packages/git-core",
      "showAsyncStacks": true,
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "useWSL": true,
      "sourceMaps": true,
    },
    {
