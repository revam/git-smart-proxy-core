      "label": "build git-service",
      "problemMatcher": [
        "$tslint5",
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "path": "packages/git-service/",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
