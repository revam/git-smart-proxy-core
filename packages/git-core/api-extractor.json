{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/api-extractor.schema.json",
  "apiJsonFile": {
    "enabled": true,
    "outputFolder": "dist"
  },
  "apiReviewFile": {
    "enabled": true,
    "apiReviewFolder": "etc",
    "tempFolder": "dist"
  },
  "dtsRollup": {
    "enabled": true,
    "trimming": false,
    "mainDtsRollupPath": "./index.d.ts",
    "publishFolder": "dist/package"
  },
  "policies": {
    "namespaceSupport": "permissive"
  },
  "validationRules": {
    "missingReleaseTags": "error"
  },
  "compiler": {
    "configType": "tsconfig",
    "rootFolder": "."
  },
  "project": {
    "entryPointSourceFile": "dist/build/main.d.ts"
  }
}
