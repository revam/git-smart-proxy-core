{
  "name": "@revam/git-core",
  "description": "Core library for other git packages",
  "version": "0.1.1",
  "private": true,
  "module": "./dist/build/main.js",
  "types": "./dist/build/main.d.ts",
  "license": "ISC",
  "author": "Mikal Stordal <mikalstordal@gmail.com>",
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revam/node-git-monorepo.git",
    "directory": "packages/git-core"
  },
  "homepage": "https://github.com/revam/node-git-monorepo/tree/master/packages/git-core#readme",
  "bugs": {
    "url": "https://github.com/revam/node-git-monorepo/issues"
  },
  "keywords": [
    "core",
    "core-utils",
    "git",
    "git-utils",
    "module",
    "typescript"
  ],
  "dependencies": {
    "@types/node-fetch": "^2.1.6",
    "micro-signals": "^2.0.0",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.1.0",
    "@revam/rollup-plugin-common": "1.0.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "jest": "^24.1.0",
    "rollup": "^1.2.3",
    "rollup-plugin-re": "^1.0.7",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "typescript": "3.4.4"
  },
  "scripts": {
    "api-extractor:local": "api-extractor run -l",
    "api-extractor": "api-extractor run",
    "build": "npm run cleanup && npm run lint && npm run api-extractor && npm run test && npm run rollup && npm pack ./dist/package",
    "cleanup": "rm -rf dist",
    "lint": "tslint -p .",
    "preapi-extractor:local": "npm run tsc:d.ts",
    "preapi-extractor": "npm run tsc:d.ts",
    "prerollup": "npm run tsc:config && npm run tsc:js",
    "rollup": "rollup -c dist/config/rollup.config.js",
    "test": "jest",
    "tsc": "tsc -p tsconfig.build.json",
    "tsc:config": "tsc -p tsconfig.config.json",
    "tsc:dev": "npm run tsc && npm run tsc:config",
    "tsc:d.ts": "tsc -p tsconfig.build.d.ts.json",
    "tsc:js": "tsc -p tsconfig.build.js.json"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
