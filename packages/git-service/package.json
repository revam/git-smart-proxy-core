{
  "name": "git-service",
  "version": "1.0.0",
  "description": "Serve git over http(s)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "copy": "node -e \"const args=process.argv.slice(1);if(args.length%2===0){const j=args.length/2;for(let i=0;i<j;i++){fs=require('fs');fs.createReadStream(args[i*2]).pipe(fs.createWriteStream(args[i*2+1]));}}else{throw new Error('Invalid number of arguments');}\"",
    "docs": "typedoc --out ./docs/ --mode file --theme minimal --excludePrivate --excludeProtected --readme DOCS.md --tsconfig ./tsconfig.json",
    "test": "tslint test/**/*.ts && jest",
    "build": "tsc --noEmit -p . && tslint src/**/*.ts && tsc -p .",
    "prepublish": "npm run test && npm run copy ../../LICENSE LICENSE ../../.npmignore .npmignore && npm run build",
    "postpublish": "del-cli lib LICENSE .npmignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revam/node-git-service.git"
  },
  "keywords": [
    "git",
    "push",
    "pull",
    "deploy",
    "typescript"
  ],
  "author": "Mikal Stordal <mikalstordal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/revam/node-git-service/issues"
  },
  "homepage": "https://github.com/revam/node-git-service#readme",
  "devDependencies": {
    "del-cli": "^1.1.0",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/node-fetch": "^1.6.9",
    "git-packet-streams": "^1.1.0",
    "git-side-band-message": "0.0.3",
    "micro-signals": "^2.0.0",
    "node-fetch": "^2.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
